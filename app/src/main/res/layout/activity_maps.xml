<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/flowersClassificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/covid_id_flowers" />

    <Button
        android:id="@+id/objectDetectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="168dp"
        android:layout_marginStart="67dp"
        android:layout_toEndOf="@+id/flowersClassificationButton"
        android:text="@string/covid_id_localize" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flowersClassificationButton"
        android:layout_marginTop="-48dp"
        tools:context=".MapsActivity" />


</RelativeLayout>
